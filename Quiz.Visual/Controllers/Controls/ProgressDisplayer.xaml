<UserControl x:Class="Quiz.Visual.Controllers.Controls.ProgressDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quiz.Visual.Controllers.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Name="DataInformation"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontFamily="Cascadia Code"
               FontSize="25"/>
        <Border BorderBrush="{StaticResource LightGreen}" BorderThickness="3"/>
    </Grid>
</UserControl>
