<UserControl x:Class="QuestionVisualisation.UserControls.QuestionsDisplay.QuestionsDisplayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestionVisualisation.UserControls.QuestionsDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="QuestionView"/>

        <Button Grid.Row="1"
                Content="Back"
                Click="Button_Click"/>

    </Grid>
</UserControl>
