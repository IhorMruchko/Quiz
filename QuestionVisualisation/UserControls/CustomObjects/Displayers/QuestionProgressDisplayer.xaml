<UserControl x:Class="QuestionVisualisation.UserControls.CustomObjects.Displayers.QuestionProgressDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestionVisualisation.UserControls.CustomObjects.Displayers"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="DarkGreen" BorderThickness="2" Grid.RowSpan="2"/>
        <Label Name="CurrentShownQuestionsAmount" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Name="AllQuestionsAmount" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Border Grid.Row="1" BorderBrush="DarkGreen" BorderThickness="2"/>
    </Grid>
</UserControl>
