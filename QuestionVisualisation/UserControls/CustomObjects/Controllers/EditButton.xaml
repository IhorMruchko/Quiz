<UserControl x:Class="QuestionVisualisation.UserControls.CustomObjects.Controllers.EditButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestionVisualisation.UserControls.CustomObjects.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="EditIcon"               
               MouseEnter="EditIcon_MouseEnter"
               MouseLeave="EditIcon_MouseLeave"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center">
            <Image Grid.Column="1" 
                   Source="/Resources/Images/edit-icon.png"               
                   Height="25"/>
        </Label>
    </Grid>
</UserControl>
