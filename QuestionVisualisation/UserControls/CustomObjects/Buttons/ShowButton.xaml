<UserControl x:Class="QuestionVisualisation.UserControls.CustomObjects.Buttons.ShowButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestionVisualisation.UserControls.CustomObjects.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Label x:Name="ViewPlaceholder"  
               MouseEnter="ViewPlaceholder_MouseEnter"
               MouseLeave="ViewPlaceholder_MouseLeave"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center">
            <Image Source="/Resources/Images/view-icon.png"/>
        </Label>
    </Grid>
</UserControl>
